# Auth
os_cloud = "mycloud"       # or leave empty and use OS_* env vars
os_region = ""

# Storage
container_name = "soc-audit-logs"

# Network
network_id   = "<TENANT_NETWORK_UUID>"
keypair_name = "<EXISTING_KEYPAIR>"
allow_ssh_cidrs = ["203.0.113.0/24", "198.51.100.0/24"]
http_cidrs      = []
https_cidrs     = []

# Compute
image_name  = "Ubuntu 22.04"
flavor_name = "m1.small"
volume_size_gb = 10

# Load balancer
lb_enabled        = true
lb_vip_subnet_id  = "<SUBNET_UUID>"
assign_lb_floating_ip = true
external_network_name = "Ext-Net"

# FWaaS (optional)
fw_enabled = false
fw_attach_ports = []
